<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="thomas-volto-project.core">

  <i18n:registerTranslations directory="locales" />

  <includeDependencies package="." />

  <include package=".behaviors" />

  <include file="upgrades.zcml" />

  <!-- Enable overrides (if required) -->
  <!-- <includeOverrides file="overrides.zcml" /> -->

  <!-- <permission
    id="thomas-volto-project.newpermission"
    title="thomas-volto-project: Manage Something"
    /> -->

  <genericsetup:registerProfile
      name="default"
      title="thomas-volto-project site (thomas-volto-project.core)"
      directory="profiles/default"
      description="Installs the thomas-volto-project.core add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.post_install"
      />

  <genericsetup:registerProfile
    name="content"
    title="thomas-volto-project site (example content)"
    directory="profiles/content"
    description="thomas-volto-project site with example content for testing."
    provides="Products.GenericSetup.interfaces.EXTENSION"
    post_handler=".setuphandlers.import_content"
    />

  <genericsetup:registerProfile
    name="testing"
    title="thomas-volto-project site (testing)"
    directory="profiles/testing"
    description="thomas-volto-project site with example content for testing."
    provides="Products.GenericSetup.interfaces.EXTENSION"
    post_handler=".setuphandlers.testing_content"
    />

  <genericsetup:registerProfile
      name="uninstall"
      title="thomas-volto-project site (thomas-volto-project.core): uninstall"
      directory="profiles/uninstall"
      description="Uninstalls the thomas-volto-project.core add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.uninstall"
      />

  <utility
      factory=".setuphandlers.HiddenProfiles"
      name="thomas-volto-project.core-hiddenprofiles" />

  <!-- Indexers/Metadata -->
  <!-- <adapter name="lead_image_file" factory=".indexers.leadImageFile" /> -->

  <!-- Vocabularies -->
  <!-- <utility
    component=".vocabularies.simple_vocabulary"
    name="thomas-volto-project.core.vocabulary.simple_vocabulary"
    /> -->

  <!-- Subscribers -->
  <!-- <subscriber
    for="plone.app.contenttypes.interfaces.ICollection
         zope.lifecycleevent.IObjectAddedEvent"
    handler=".subscribers.subscriber_action"
    /> -->

</configure>
